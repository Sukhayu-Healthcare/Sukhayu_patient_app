<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sukhayu_logo"
                android:contentDescription="@string/app_name"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sukhayu"
                android:textColor="#0F172A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_language"
                    android:tint="#0F172A"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/language_icon_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="14sp"
                    android:textColor="#0F172A" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Profile Image -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sample_patient"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Profile Picture" />

                    <ImageButton
                        android:id="@+id/btn_change_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:backgroundTint="@android:color/transparent"
                        android:background="@drawable/black_circle"
                        android:src="@drawable/ic_camera"
                        android:tint="@android:color/white"
                        android:contentDescription="Change Profile" />
                </FrameLayout>

                <TextView
                    android:text="Profile"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Full Name -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Full Name"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="राम शर्मा"
                    android:enabled="false"
                    android:backgroundTint="#EAEAEA"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Age -->
                <TextView
                    android:text="Age"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="45"
                    android:enabled="false"
                    android:backgroundTint="#EAEAEA"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Gender -->
                <TextView
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginBottom="12dp" />

                <!-- Phone -->
                <TextView
                    android:text="Phone Number"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+91-9876543210"
                    android:enabled="false"
                    android:backgroundTint="#EAEAEA"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Patient ID -->
                <TextView
                    android:text="Patient ID"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_patient_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P001"
                    android:enabled="false"
                    android:backgroundTint="#EAEAEA"
                    android:padding="8dp"
                    android:layout_marginBottom="20dp" />

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btn_edit"
                    android:text="Edit"
                    android:background="#04020D"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btn_logout"
                    android:text="Logout"
                    android:background="#D61C3A"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
