<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sukhayu_logo"
                android:contentDescription="App Logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sukhayu"
                android:textColor="#0F172A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_language"
                    android:tint="#0F172A"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="14sp"
                    android:textColor="#0F172A" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sample_patient"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="राम शर्मा"
                        android:textColor="#0F172A"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Patient ID: P001"
                        android:textColor="#475569"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dashboard Options -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Check Symptoms -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCheckSymptoms"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_ai"
                        android:tint="#2563EB" />

                    <TextView
                        android:text="AI Symptom Checker"
                        android:textSize="14sp"
                        android:textColor="#0F172A"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Consult Doctor -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardConsultDoctor"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_doctor"
                        android:tint="#16A34A" />

                    <TextView
                        android:text="Consult Doctor"
                        android:textSize="14sp"
                        android:textColor="#0F172A"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Past Consultations -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPastConsultations"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_history"
                        android:tint="#7C3AED" />

                    <TextView
                        android:text="Past Consultations"
                        android:textSize="14sp"
                        android:textColor="#0F172A"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Medicines -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMedicines"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_medicine"
                        android:tint="#059669" />

                    <TextView
                        android:text="Medicines"
                        android:textSize="14sp"
                        android:textColor="#0F172A"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- Emergency Button -->
        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="⚠️ Emergency"
            android:backgroundTint="#DC2626"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingVertical="12dp" />
    </LinearLayout>
</ScrollView>
