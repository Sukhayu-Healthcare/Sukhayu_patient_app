<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ======================= SCROLL CONTENT ======================= -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomInputBox"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= HEADER ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_arrow_back_24"
                    android:contentDescription="Back" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="AI Symptom Checker"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0F172A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Question 1 / 3"
                        android:textSize="14sp"
                        android:textColor="#475569"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="30"
                    android:max="100"
                    android:progressTint="#10B981"
                    android:backgroundTint="#E2E8F0" />
            </LinearLayout>

            <!-- ================ CHAT BUBBLES ================= -->
            <LinearLayout
                android:id="@+id/chatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- Bubble 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_symptom"
                        android:layout_marginEnd="6dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/chat_ai_bg"
                        android:padding="16dp">

                        <TextView
                            android:text="Hello! I'm your AI health assistant. I'll analyze your symptoms and provide appropriate guidance."
                            android:textSize="15sp"
                            android:textColor="#1E293B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_sound"
                        android:padding="4dp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <!-- Bubble 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_symptom"
                        android:layout_marginEnd="6dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/chat_ai_bg"
                        android:padding="16dp">

                        <TextView
                            android:text="What are your main symptoms? Please describe in detail."
                            android:textSize="15sp"
                            android:textColor="#1E293B"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_sound"
                        android:padding="4dp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ======================= FIXED INPUT BUBBLE ======================= -->
    <LinearLayout
        android:id="@+id/bottomInputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_big_card"
        android:padding="18dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/input_field_bg"
            android:paddingHorizontal="12dp">

            <EditText
                android:id="@+id/etSymptoms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Describe your symptoms..."
                android:background="@android:color/transparent"
                android:textColor="#1E293B"
                android:textSize="15sp"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/btnMic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_mic"
                android:layout_marginStart="6dp" />

            <ImageView
                android:id="@+id/btnUpload"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_upload"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_send"
                android:layout_marginStart="10dp"
                android:background="@drawable/send_button_bg"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            android:text="Examples:"
            android:layout_marginTop="16dp"
            android:textColor="#475569"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
